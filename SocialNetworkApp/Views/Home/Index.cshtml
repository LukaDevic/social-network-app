@model IEnumerable<SocialNetworkApp.Models.Concert>

@{
    ViewBag.Title = "Home Page";
}


<ul class="concerts">
    @foreach (var concert in Model)
    {
    <li>
        <div class="date">
            <div class="month">
                @concert.DateTime.ToString("MMM")
            </div>
            <div class="day">
                @concert.DateTime.ToString("d ")
            </div>
        </div>
        <div class="details">
            <span class="artist">
                @concert.Artist.Name
            </span>
            <span class="genre">
                @concert.Genre.Name
            </span>
            <button data-concert-id="@concert.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going?</button>
        </div>
    </li>
    }

</ul>

@section scripts
{
    <script>
        $(document).ready(function() {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { concertId: button.attr("data-concert-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        alert("something failed!");
                    });
            });
        });
    </script>
    }
