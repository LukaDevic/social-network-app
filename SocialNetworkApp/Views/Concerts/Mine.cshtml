@model IEnumerable<SocialNetworkApp.Models.Concert>
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Upcoming Concerts</h2>

<ul class="concerts voffset4">
    @foreach (var concert in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @concert.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @concert.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @concert.Venue
                </span>
                <span class="genre">
                    @concert.Genre.Name
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit","Concerts", new { id = concert.Id })">
                    Edit</a>
                </div>
            </div>
        </li>
    }

</ul>