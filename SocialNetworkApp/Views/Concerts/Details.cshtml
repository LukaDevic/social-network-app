@model SocialNetworkApp.Core.ViewModels.ConcertDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @Model.Concert.Artist.Name
    @if (User.Identity.IsAuthenticated)
    {
        if (Model.IsFollowing)
        {
            <button class="btn btn-info js-toggle-follow" data-user-id="@Model.Concert.ArtistId">Following</button>
        }
        else
        {
            <button class="btn btn-default js-toggle-follow" data-user-id="@Model.Concert.ArtistId">Follow</button>
        }
    }
</h2>
<p>
    Performing at @Model.Concert.Venue on @Model.Concert.DateTime.ToString("d MMM") at @Model.Concert.DateTime.ToString("HH:mm")
</p>

@if(User.Identity.IsAuthenticated && Model.IsAttending)
{
    <p>You are going to this event</p>
}


@section scripts
{
    <script>
        $(document).ready(function () {
            ConcertDetailsController.init();
        });
    </script>
    }
